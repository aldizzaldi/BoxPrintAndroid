<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="#000000"
        android:text="Cart"
        android:textSize="17dp"
        android:src="@drawable/btn"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:id="@+id/medium_Textview"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn"
        android:layout_below="@+id/medium_Textview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dfdfdf"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="12dp"
                android:textColor="#898989"
                android:text="Total 5 item selected"
                android:textSize="14dp"
                android:gravity="center"
                android:src="@drawable/btn" android:id="@+id/regular_Textview"/>


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/corner_layout"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                >

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#898989"
                                android:text="Pick up"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:src="@drawable/btn"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#141414"
                                android:text="Today 11:30 am"
                                android:textSize="14dp"
                                android:gravity="center"
                                android:layout_marginLeft="16dp"
                                />


                        </LinearLayout>


                        <LinearLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="6dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#898989"
                                android:text="Delivery"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:src="@drawable/btn"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#141414"
                                android:text="Tommorro 9:30 am"
                                android:textSize="14dp"
                                android:layout_marginLeft="12dp"
                                />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#292f33"
                            android:text="Payable"
                            android:textSize="12dp"
                            android:layout_gravity="right"

                            android:gravity="center"
                            android:layout_margin="3dp"                />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="right"
                            android:layout_margin="3dp"
                            android:gravity="right"
                            android:text="Rp. 40.000"
                            android:textColor="#d7effe"
                            android:textSize="14dp" />
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#3f7600"
                            android:text="Free pick up-drop"
                            android:textSize="12dp"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_margin="3dp"                />
                        />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#cfcfcf"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"></LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#898989"
                        android:text="Default Address"
                        android:textSize="12dp"
                        android:src="@drawable/btn"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#898989"
                        android:text="Edit"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:src="@drawable/btn"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="21,Perumdos ITS"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Kejawan Putih, 60111"
                    android:textColor="#000000"
                    android:textSize="13dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:background="#28a7fc"
        android:text="Place Pickup"
        android:textSize="15dp"
        android:gravity="center"
        android:src="@drawable/btn"/>

    <FrameLayout
        android:id="@+id/frameLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >

        <ImageView android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/circle"/>

        <ImageView
            android:id="@+id/loadingImage"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/loading"
            android:layout_gravity="center"/>

    </FrameLayout>

</RelativeLayout>
