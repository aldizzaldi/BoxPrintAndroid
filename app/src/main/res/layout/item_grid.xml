<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="11dp"
        card_view:cardCornerRadius="7dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="166.7dp"
                    android:layout_height="166.1dp"
                    android:id="@+id/image_product"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brochure"/>

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14.4sp"
                android:layout_marginTop="11.5dp"
                android:text="Cocobolo Poolside \n Bar + Grill"
                android:layout_marginLeft="12.5dp"
                android:id="@+id/title_product_view"
                android:textColor="#262628"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="60 Kub Pines Apt. 797"
                android:textSize="11.5sp"
                android:textColor="#9b9b9b"
                android:id="@+id/title_price_product"
                android:layout_marginLeft="12.5dp"
                android:layout_marginTop="6.3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7.8dp"
                android:layout_marginLeft="12.5dp"
                android:layout_marginBottom="11.dp">

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:stepSize="0.1"
                    android:progressTint="@android:color/holo_red_dark"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:focusable="true"
                    android:rating="4"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
